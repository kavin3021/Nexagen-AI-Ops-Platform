# NexaGen AI Ops Platform - Environment Variables
# Copy this to .env and fill with your actual values

# ===========================================
# PROJECT CONFIGURATION
# ===========================================
PROJECT_NAME=nexagen
ENVIRONMENT=dev
VERSION=1.0.0
REGION_AZURE=eastus
REGION_GCP=us-central1

# ===========================================
# AZURE CONFIGURATION
# ===========================================
# Get these from Azure Portal
AZURE_SUBSCRIPTION_ID=your-azure-subscription-id-here
AZURE_TENANT_ID=your-azure-tenant-id-here
AZURE_CLIENT_ID=your-azure-client-id-here
AZURE_CLIENT_SECRET=your-azure-client-secret-here
AZURE_RESOURCE_GROUP=rg-nexagen-dev

# Azure AI Foundry & OpenAI
AZURE_AI_FOUNDRY_HUB=nexagen-ai-hub
AZURE_OPENAI_ENDPOINT=https://nexagen-openai.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
AZURE_OPENAI_API_VERSION=2024-02-01
AZURE_OPENAI_GPT_DEPLOYMENT=nexagen-gpt-flow
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=nexagen-embed

# Azure Cognitive Services
AZURE_COMPUTER_VISION_ENDPOINT=https://nexagen-cv.cognitiveservices.azure.com/
AZURE_COMPUTER_VISION_KEY=your-computer-vision-key-here
AZURE_CONTENT_SAFETY_ENDPOINT=https://nexagen-safety.cognitiveservices.azure.com/
AZURE_CONTENT_SAFETY_KEY=your-content-safety-key-here

# Azure Search
AZURE_SEARCH_ENDPOINT=https://nexagen-search.search.windows.net
AZURE_SEARCH_API_KEY=your-azure-search-api-key-here
AZURE_SEARCH_INDEX_NAME=nexagen-documents

# Azure ML & Storage
AZURE_ML_WORKSPACE=nexagen-ml-workspace
AZURE_STORAGE_ACCOUNT=nexagenstorage
AZURE_STORAGE_KEY=your-storage-key-here
AZURE_KEY_VAULT=nexagen-kv

# Azure Monitoring
AZURE_APP_INSIGHTS_KEY=your-app-insights-key-here
AZURE_LOG_ANALYTICS_WORKSPACE=nexagen-logs

# ===========================================
# GOOGLE CLOUD CONFIGURATION
# ===========================================
# Get these from GCP Console
GOOGLE_CLOUD_PROJECT=your-gcp-project-id-here
GOOGLE_APPLICATION_CREDENTIALS=./gcp-credentials.json
GCP_REGION=us-central1
GCP_ZONE=us-central1-a

# Vertex AI
VERTEX_AI_LOCATION=us-central1
VERTEX_AI_ENDPOINT_BASE=nexagen-bison
VERTEX_AI_FINETUNED_ENDPOINT=nexagen-tuned-endpoint
VERTEX_AI_MODEL_DISPLAY_NAME=nexagen-tuned

# GCP Storage & Services
GCP_BUCKET_NAME=nexagen-finetune
GCP_DATASET_NAME=finetune-ds
GCP_SECRET_MANAGER_PREFIX=nexagen

# ===========================================
# DATABASE & VECTOR STORE
# ===========================================
# PostgreSQL (for metadata)
DATABASE_URL=postgresql://nexagen_user:password@localhost:5432/nexagen_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nexagen_db
DB_USER=nexagen_user
DB_PASSWORD=your-db-password-here

# Redis (for caching)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Vector Database (ChromaDB)
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_COLLECTION_NAME=nexagen-documents

# ===========================================
# MODEL CONFIGURATION
# ===========================================
# LLM Settings
MAX_TOKENS=1000
TEMPERATURE=0.7
TOP_P=0.9
FREQUENCY_PENALTY=0.0
PRESENCE_PENALTY=0.0

# Embedding Settings
EMBEDDING_DIMENSION=1536
SIMILARITY_THRESHOLD=0.8
MAX_RETRIEVAL_RESULTS=5

# Fine-tuning Settings
FINETUNE_LEARNING_RATE=2e-5
FINETUNE_EPOCHS=3
FINETUNE_BATCH_SIZE=4
FINETUNE_MAX_SEQUENCE_LENGTH=512

# ===========================================
# MONITORING & OBSERVABILITY
# ===========================================
# Application Insights
ENABLE_TELEMETRY=true
TELEMETRY_SAMPLE_RATE=0.1
LOG_LEVEL=INFO

# Prometheus & Grafana
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3000
GRAFANA_API_KEY=your-grafana-api-key-here

# Custom Metrics
ENABLE_CUSTOM_METRICS=true
METRICS_PORT=8080
HEALTH_CHECK_PORT=8081

# ===========================================
# SECURITY & COMPLIANCE
# ===========================================
# API Security
JWT_SECRET_KEY=your-jwt-secret-key-here-make-it-long
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
API_RATE_LIMIT=100
API_BURST_LIMIT=200

# Content Safety
ENABLE_PII_DETECTION=true
ENABLE_CONTENT_FILTERING=true
CONTENT_SAFETY_THRESHOLD=0.7
PII_DETECTION_CONFIDENCE=0.8

# Data Privacy
ENABLE_DATA_ENCRYPTION=true
ENABLE_AUDIT_LOGGING=true
DATA_RETENTION_DAYS=90
GDPR_COMPLIANCE=true

# ===========================================
# COST MANAGEMENT
# ===========================================
# Budget Limits (in INR)
DAILY_BUDGET_LIMIT=50
MONTHLY_BUDGET_LIMIT=500
YEARLY_BUDGET_LIMIT=6000

# Alert Thresholds
BUDGET_ALERT_THRESHOLD_80=0.8
BUDGET_ALERT_THRESHOLD_95=0.95
COST_ALERT_EMAIL=your-email@example.com

# Usage Limits
MAX_REQUESTS_PER_DAY=1000
MAX_TOKENS_PER_REQUEST=2000
MAX_DOCUMENTS_PER_USER=100

# ===========================================
# NOTIFICATION SERVICES
# ===========================================
# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
FROM_EMAIL=nexagen@yourcompany.com

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#nexagen-alerts
ENABLE_SLACK_NOTIFICATIONS=true

# Microsoft Teams
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/YOUR/TEAMS/WEBHOOK
ENABLE_TEAMS_NOTIFICATIONS=false

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
# Debug & Development
DEBUG=false
DEVELOPMENT_MODE=false
ENABLE_MOCK_SERVICES=false
SKIP_AUTH_IN_DEV=false

# Testing
ENABLE_LOAD_TESTING=false
TEST_DATA_SIZE=100
PERFORMANCE_TESTING=false

# Local Services Ports
API_PORT=8000
FRONTEND_PORT=3000
DOCS_PORT=8001
MONITORING_PORT=3001

# ===========================================
# EXTERNAL INTEGRATIONS
# ===========================================
# Third-party APIs
HUGGINGFACE_API_KEY=your-huggingface-key-here
OPENAI_API_KEY=your-openai-key-here
ANTHROPIC_API_KEY=your-anthropic-key-here

# Document Processing
ENABLE_OCR_PREPROCESSING=true
OCR_CONFIDENCE_THRESHOLD=0.9
DOCUMENT_SIZE_LIMIT_MB=50
SUPPORTED_FORMATS=pdf,docx,txt,png,jpg

# ===========================================
# FEATURE FLAGS
# ===========================================
# Core Features
ENABLE_MULTIMODAL_AI=true
ENABLE_CUSTOM_FINETUNING=true
ENABLE_RAG_PIPELINE=true
ENABLE_CONTENT_SAFETY=true

# Advanced Features
ENABLE_AI_AGENTS=false
ENABLE_STREAMING_RESPONSES=false
ENABLE_FEDERATED_LEARNING=false
ENABLE_DIFFERENTIAL_PRIVACY=false

# Experimental Features
ENABLE_QUANTUM_EXPERIMENTS=false
ENABLE_EDGE_DEPLOYMENT=false
ENABLE_BLOCKCHAIN_LOGGING=false

# ===========================================
# INFRASTRUCTURE SETTINGS
# ===========================================
# Kubernetes
K8S_NAMESPACE=nexagen
K8S_CLUSTER_NAME=nexagen-cluster
HELM_RELEASE_NAME=nexagen-app

# Docker
DOCKER_REGISTRY=nexagen.azurecr.io
DOCKER_IMAGE_TAG=latest
CONTAINER_MEMORY_LIMIT=4Gi
CONTAINER_CPU_LIMIT=2

# Auto-scaling
MIN_REPLICAS=1
MAX_REPLICAS=10
TARGET_CPU_UTILIZATION=70
TARGET_MEMORY_UTILIZATION=80

# ===========================================
# COMPLIANCE & GOVERNANCE
# ===========================================
# Regulatory Compliance
SOC2_COMPLIANCE=true
HIPAA_COMPLIANCE=false
PCI_COMPLIANCE=false
ISO27001_COMPLIANCE=true

# Data Governance
ENABLE_DATA_LINEAGE=true
ENABLE_MODEL_VERSIONING=true
ENABLE_EXPERIMENT_TRACKING=true
ENABLE_BIAS_DETECTION=true

# Audit & Reporting
AUDIT_LOG_RETENTION_DAYS=2555
ENABLE_COMPLIANCE_REPORTING=true
REPORT_GENERATION_SCHEDULE=monthly